extends layout

block content
    h2 Projects
    #grid.mdl-grid
        each project in context.projects
            if project.isSpacing()
                .mdl-cell.mdl-cell--3-col
            else
                .mdl-cell.mdl-cell--3-col
                    .project-card-square.mdl-card.mdl-shadow--2dp
                        .mdl-card__title.mdl-card--expand(id=project.getTitle(), style='background-image: url(\'/assets/images/' + project.getBackground() + '\'')
                            h2.mdl-card__title-text=project.getTitle()
                        .mdl-card__supporting-text=project.getDescription()
                        .mdl-card__actions.mdl-card--border
                            a(href=project.getLink()).mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect=project.getLinkText()
    h2 Work Experience
    table#jobs.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
        thead
            tr
                th.mdl-data-table__cell--non-numeric Organization
                th Time
                th Skills
                th Details
        tbody
            each job in context.jobs
                tr
                    td.mdl-data-table__cell--non-numeric
                        a(href=job.link)=job.getName()
                    td=job.getTime()
                    td=job.getSkills()
                    td.job_details=job.getExperience()
    h2 Contact Info
    p Email me at #[a(href='mailto:nicholas@nicholasnassar.com') nicholas@nicholasnassar.com]