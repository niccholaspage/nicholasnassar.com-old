doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='icon', href='/favicon.ico')
        title=context.title
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(href='https://code.getmdl.io/1.1.3/material.blue-indigo.min.css', rel='stylesheet')
        link(href='/assets/css/style.css', rel='stylesheet')
        script(src='https://code.jquery.com/jquery-1.11.3.min.js', integrity='sha256-7LkWEzqTdpEfELxcZZlS6wAx5Ff13zZ83lYO2/ujj7g=', crossorigin='anonymous')
        script(defer, src='https://code.getmdl.io/1.1.3/material.min.js')
        script(src='/assets/js/base.js')
        block scripts
    body
        .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
            header.mdl-layout__header
                .mdl-layout__header-row
                    span.mdl-layout-title=context.websiteName
                nav.mdl-navigation
                    a(href='/').mdl-layout__tab Home
                    a(href='/contact').mdl-layout__tab Contact
            main.mdl-layout__content
                .page-content
                    block content